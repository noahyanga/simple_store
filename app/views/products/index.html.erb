<h1>Products</h1>

<ul>
  <% @products.each do |product| %>
    <li>
      <strong>Title:</strong> <%= product.title %><br>
      <strong>Price:</strong> $<%= product.price %><br>
      <strong>Stock Quantity:</strong> <%= product.stock_quantity %><br>
      <strong>Category:</strong> <%= product.category.name %><br>
    </li>
  <% end %>
</ul>
